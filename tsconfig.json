{
  "compilerOptions": {
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "target": "esnext",
    "baseUrl": "src",
    "paths": {
      "@/*": ["/*"],
      "@packages/*": ["../packages/*"],
      "@classes/*": ["classes/*"],
      "@app/*": ["app/*"],
      "@data/*": ["app/data/*"],
      "@services/*": [
        "app/services/*",
        "../packages/services/*"
      ],
      "@views/*": ["app/views/*"]
    }
  }
}
